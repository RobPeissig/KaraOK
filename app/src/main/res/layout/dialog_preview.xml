<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_preview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_preview_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_preview_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/dialog_preview_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true" />

    <RadioGroup
        android:id="@+id/dialog_preview_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioButton_orginal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original Song Mode" />

        <RadioButton
            android:id="@+id/radioButton_inst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instrumental Mode" />
    </RadioGroup>

    <ImageView
        android:id="@+id/dialog_preview_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

</LinearLayout>
